<UserControl x:Class="FantasyLCS.App.DraftView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <ListView x:Name="lvAvailablePlayers">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Team" DisplayMemberBinding="{Binding Team}" />
                        <!-- Other columns -->
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Draft Player" Click="DraftPlayer_Click"/>
            <!-- You can add more controls inside this StackPanel -->
        </StackPanel>
    </Grid>
</UserControl>
