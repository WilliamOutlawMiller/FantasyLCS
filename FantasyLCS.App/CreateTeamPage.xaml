<Page x:Class="FantasyLCS.App.CreateTeamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:FantasyLCS.App"
      Title="Create Team">

    <Grid Margin="20">
        <StackPanel Width="300">
            <TextBlock Text="Team Name" Margin="0,0,0,10"/>
            <TextBox x:Name="TeamNameTextBox" Height="30"/>

            <TextBlock Text="Team Logo URL" Margin="0,20,0,10"/>
            <TextBox x:Name="TeamLogoTextBox" Height="30"/>

            <Button Content="Create Team" Margin="0,20,0,0" Height="30" Click="CreateTeam_Click"/>
        </StackPanel>
    </Grid>
</Page>
