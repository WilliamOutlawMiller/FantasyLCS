@page
@model FantasyLCS.WebApp.Pages.CreateLeagueModel
@{
    ViewData["Title"] = "Create League";
}

<style>
    /* Reuse styles from the home page */
    * {
        box-sizing: border-box;
    }

    .create-league-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .form-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 50%;
        margin-top: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
    }

    .form-input {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn {
        background-color: mediumseagreen;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: mediumaquamarine;
        }
</style>

<div class="create-league-container">
    <div class="form-container">
        <h2>Create a League</h2>
        <form method="post" asp-page-handler="Create">
            <div class="form-group">
                <label class="form-label" for="leagueName">League Name:</label>
                <input type="text" id="leagueName" name="leagueName" class="form-input" required>
            </div>

            <button type="submit" class="btn">Create League</button>
        </form>
    </div>
</div>
