@page
@model FantasyLCS.WebApp.Models.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<style>
    * {
        box-sizing: border-box;
    }

    .login-container {
        display: flex; /* Use flexbox for horizontal layout */
        justify-content: center; /* Center the content horizontally */
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .col {
        flex: 1; /* Each column takes equal width */
        padding: 0 20px; /* Adjust padding as needed */
        margin-top: 6px;
    }

    input,
    .btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 4px;
        margin: 5px 0;
        opacity: 0.85;
        display: inline-block;
        font-size: 17px;
        line-height: 20px;
        text-decoration: none;
    }

    input:hover,
    .btn:hover {
        opacity: 1;
    }

    input[type=submit] {
        background-color: mediumseagreen;
        color: white;
        cursor: pointer;
    }

    input[type=submit]:hover {
        background-color: mediumaquamarine;
    }

    .google {
        background-color: #dd4b39;
        color: white;
    }

    .bottom-container {
        text-align: center;
        border-radius: 12px;
        background-color: #666; /* Optional: Add background color */
        color: white; /* Optional: Change text color */
        padding: 10px 0; /* Optional: Add padding for better spacing */
        margin-top: 20px; /* Optional: Add margin for spacing from forms */
    }
</style>

<div class="login-container">
    <div class="col">
        <form method="post" asp-action="Login">
                <h3>Login</h3>
                <input type="text" asp-for="Input.Username" placeholder="Username" required>
                <input type="password" asp-for="Input.Password" placeholder="Password" required>
                <input type="submit" value="Login">
                <a href="#" class="google btn">
                    <i class="fa fa-google fa-fw">
                    </i> Login with Google
                </a>
        </form>
    </div>
    <div class="col">
        <form method="post" asp-action="Signup">
                <h3>Signup</h3>
                <input type="text" asp-for="NewUser.Username" placeholder="New Username" required>
                <input type="password" asp-for="NewUser.Password" placeholder="New Password" required>
                <input type="submit" value="Signup">
        </form>
    </div>
</div>
    <div>
        <div class="bottom-container">
            <a href="#" style="color:white; background-color: #666;" class="btn">Forgot password?</a>
        </div>
    </div>
</div>
