@page
@model FantasyLCS.WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<style>
    * {
        box-sizing: border-box;
    }

    .login-container {
        display: flex;
        justify-content: center;
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .col {
        flex: 1;
        padding: 0 20px;
        margin-top: 6px;
    }

    input,
    .btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 4px;
        margin: 5px 0;
        opacity: 0.85;
        display: inline-block;
        font-size: 17px;
        line-height: 20px;
        text-decoration: none;
    }

    input:hover,
    .btn:hover {
        opacity: 1;
    }

    input[type=submit] {
        background-color: mediumseagreen;
        color: white;
        cursor: pointer;
    }

    input[type=submit]:hover {
        background-color: mediumaquamarine;
    }

    .google {
        background-color: #dd4b39;
        color: white;
    }

    .bottom-container {
        text-align: center;
        border-radius: 12px;
        background-color: #666;
        color: white;
        padding: 10px 0;
        margin-top: 20px;
    }
</style>

<div class="login-container">
    <div class="col">
        <form asp-page-handler="login" method="post">
            <h3>Login</h3>
            <input type="text" asp-for="Input.Username" placeholder="Username" required>
            <input type="password" asp-for="Input.Password" placeholder="Password" required>
            <input type="submit" value="Login">
            <a href="#" class="google btn">
                <i class="fa fa-google fa-fw">
                </i> Login with Google
            </a>
        </form>
    </div>
    <div class="col">
        <form asp-page-handler="signup" method="post">
                <h3>Signup</h3>
                <input type="text" asp-for="NewUser.Username" placeholder="New Username" required>
                <input type="password" asp-for="NewUser.Password" placeholder="New Password" required>
                <input type="submit" value="Signup">
        </form>
    </div>
</div>

<div class="bottom-container">           
    <a href="#" style="color:white; background-color: #666;" class="btn">Forgot password?</a>
</div>

<div class="validation-summary">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" });
</div>
