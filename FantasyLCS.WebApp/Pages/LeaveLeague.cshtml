@page
@model FantasyLCS.WebApp.Pages.LeaveLeagueModel
@{
    ViewData["Title"] = "Create League";
}

<style>
    /* Reuse styles from the home page */
    * {
        box-sizing: border-box;
    }

    .create-league-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .form-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 50%;
        margin-top: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
    }

    .form-input {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn {
        background-color: mediumseagreen;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: mediumaquamarine;
        }
</style>

<div class="leave-league-container">
    <div class="form-container">
        <h2>Leave a League</h2>
        <div class="league-info">
            <p>League Name: @Model.League.Name</p>
            @if(Model.League.UserIDs.Count == 1)
            {
                <p>League will be disbanded with no players left.</p>
            }
        </div>

        <div class="confirmation">
            <p>Are you sure you want to leave this league?</p>
            <form method="post" asp-page-handler="Leave">
                <button type="submit" class="btn">Leave League</button>
            </form>
        </div>
    </div>
</div>

<div class="validation-summary">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
